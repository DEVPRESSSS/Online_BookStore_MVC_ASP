@model Books

<div class="card">
	<div class="row pb-2">
		<h2 class="text-dark text-center m-2">Create Books</h2>

	</div>

	<div class="card-body p-4">
		<form method="post">
			<div class="border p-2 mt-4">


				<div class="mb-2">
					<label asp-for="Title" class="p-0"></label>
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="Description" class="p-0"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="ISBN" class="p-0"></label>
					<input asp-for="ISBN" class="form-control" />
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="Price" class="p-0"></label>
					<input asp-for="Price" class="form-control"/>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>


				<div class="mb-2">
					<label asp-for="PublishDate" class="p-0"></label>
					<input asp-for="PublishDate" class="form-control" type="date" />
					<span asp-validation-for="PublishDate" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="Publisher" class="p-0"></label>
					<input asp-for="Publisher" class="form-control" />
					<span asp-validation-for="Publisher" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="Stock" class="p-0"></label>
					<input asp-for="Stock" class="form-control" />
					<span asp-validation-for="Stock" class="text-danger"></span>
				</div>

				<div class="mb-2">
					<label asp-for="Category_ID" class="p-0">Category</label>
					<select asp-for="Category_ID" class="form-control" asp-items="ViewBag.Categories">
						<option value="">-- Select Category --</option>
					</select>
					<span asp-validation-for="Category_ID" class="text-danger"></span>
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Submit</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
					</div>
				</div>



			</div>

		</form>

	</div>
</div>


