@model IEnumerable<Books>

@{
    ViewData["Title"] = "Home Page";
}

<section>

    <div class="row w-100 d-flex justify-content-center mt-4" style="height:50px;">

        <div class="input-group mb-3" style="width:400px;">
            <input type="text" style="border:solid 2px black;border-radius:5px 0px 0px 5px;" class="form-control shadow-lg border-black" placeholder="search here books here..." aria-label="Recipient's username" aria-describedby="basic-addon2">
            <span class="input-group-text btn btn-primary" style="border-radius:0px 5px 5px 0px;" id="basic-addon2"><i class="bi bi-search"></i></span>
        </div>

    </div>
    <div class="row w-100 p-4 d-flex">

        <div class="col-6 d-flex align-items-center justify-content-center">

            <div class="row">


                <img src="/SrcImg/Books.png" width="500px;" height="500px;" />
            </div>

        </div>

        <div class="col-6">

            <div class="row p-4" style="margin-top:80px;">
                <h2 class="text-center" style="font-weight:800;">Discover new authors, revisit old ones.</h2>
                <p style="text-align:justify;font-weight:700;" class="mt-4">
                    Nestled within the comfort of home, our bookstore offers a curated selection of books for every reader.
                    From timeless classics to contemporary bestsellers, we have something for everyone.</p>


               
            </div>
            <div class="row d-flex justify-content-end p-2">
                <a class="btn btn-info rounded-4 p-2" style="width:180px;" href="#test"><i class="bi bi-arrow-right-circle"></i> GO TO STORE</a>

            </div>

        </div>

    </div>


</section>
<section id="test">

    <div class="row p-2">

        <h4>Our bestseller books</h4>

    </div>
    <div class="row p-2 d-flex justify-content-center p-4">
        @foreach (var item in Model)
        {
            <div class="card border p-3 shadow border-top border-5 rounded" style="width: 18rem; display: flex; justify-content: center;">
                @if (item.Book_Images != null && item.Book_Images.Count() > 0)
                {
                    <img src="@item.Book_Images?.FirstOrDefault()?.Image_Url" class="card-img-top rounded w-100" alt="Book picture" style="object-fit: cover;">
                }
                else
                {
                    <img src="/SrcImg/default.png" class="card-img-top rounded w-100" alt="Book picture" style="object-fit: cover; height: 200px;">
                }
                <div class="card-body d-flex flex-column">
                    <div class="mb-2">
                        <h5 class="card-title text-center text-primary">@item.Title</h5>
                        <h3 class="text-center mt-4 text-danger" style="font-weight:bold;"><i class="bi bi-tag"></i>₱<span> @item.Price</span></h3>
                    </div>

               


                </div>

                <div class="row d-flex justify-content-center">
                 
                    
                    <div class="col-6">

                        <a asp-controller="Home" asp-action="Details" asp-route-Id="@item.Book_Id" class="btn btn-info mt-auto align-self-center rounded-2 mt-2"><i class="bi bi-cart2"></i> Buy</a>

                    </div>
                </div>
            
            </div>
        }
    </div>
</section>




